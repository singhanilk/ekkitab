<config>
    <modules>
        <Ekkitab_Billdesk>
            <version>0.7.0</version>
        </Ekkitab_Billdesk>
    </modules>
    <global>
        <models>
            <billdesk>
                <class>Ekkitab_Billdesk_Model</class>
                <resourceModel>billdesk_mysql4</resourceModel>
            </billdesk>
            <billdesk_mysql4>
                <class>Ekkitab_Billdesk_Model_Mysql4</class>
                <entities>
                    <api_debug><table>billdesk_api_debug</table></api_debug>
                </entities>
            </billdesk_mysql4>
        </models>
        <helpers>
        	<billdesk>
        		<class>Ekkitab_Billdesk_Helper</class>
        	</billdesk>
        </helpers>
        <resources>
            <billdesk_setup>
                <setup>
                    <module>Ekkitab_Billdesk</module>
                    <class>Ekkitab_Billdesk_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </billdesk_setup>
            <billdesk_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </billdesk_write>
            <billdesk_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </billdesk_read>
        </resources>
        <blocks>
            <billdesk><class>Ekkitab_Billdesk_Block</class></billdesk>
        </blocks>
        <sales>
            <order>
                <statuses>
                    <pending_billdesk translate="label"><label>Pending Billdesk</label></pending_billdesk>
                </statuses>
                <states>
                    <pending_payment>
                        <statuses>
                            <pending_billdesk/>
                        </statuses>
                    </pending_payment>
                </states>
            </order>
             <order>
                <statuses>
                    <declined_billdesk translate="label"><label>Declined Billdesk</label></declined_billdesk>
                </statuses>
                <states>
                    <pending_payment>
                        <statuses>
                            <declined_billdesk/>
                        </statuses>
                    </pending_payment>
                </states>
            </order>
        </sales>
    </global>
    <frontend>
        <routers>
            <billdesk>
                <use>standard</use>
                <args>
                    <module>Ekkitab_Billdesk</module>
                    <frontName>billdesk</frontName>
                </args>
            </billdesk>
        </routers>
        <translate>
            <modules>
                <Ekkitab_Billdesk>
                    <files>
                        <default>Ekkitab_Billdesk.csv</default>
                    </files>
                </Ekkitab_Billdesk>
            </modules>
        </translate>
        <layout>
            <updates>
                <billdesk>
                    <file>billdesk.xml</file>
                </billdesk>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Ekkitab_Billdesk>
                    <files>
                        <default>Ekkitab_Billdesk.csv</default>
                    </files>
                </Ekkitab_Billdesk>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <billdesk>
                                            <title>Billdesk Section</title>
                                        </billdesk>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <payment>
            <billdesk>
                  <model>Ekkitab_Billdesk_Model_Billdesk</model>
                  <title>Billdesk Standard</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
                  <order_status>pending_billdesk</order_status>
            </billdesk>
        </payment>
    </default>
</config>
