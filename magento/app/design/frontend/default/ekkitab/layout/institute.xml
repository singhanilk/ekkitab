<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <!-- Mage_Customer
        <reference name="top.links">
            <action method="addLink" translate="label title" module="ekkitab_institute"><label>Register Institute</label><url helper="ekkitab_institute/getRegisterUrl"/><title>Register Institute</title><prepare/><urlParams/><position>10</position></action>
        </reference> -->
    </default>

    <customer_account>
		<reference name="customer_account_navigation">
			<action method="addLink" translate="label" module="ekkitab_institute"><name>institute</name><path>ekkitab_institute/search/myInstitutes</path><label>Manage Insitutes</label></action>
		</reference>
    </customer_account>

	<ekkitab_institute_account_create>
        <!-- Mage_ekkitab_institute -->
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="ekkitab_institute/form_register" name="ekkitab_institute_form_register" template="institute/form/register.phtml"/>
        </reference>
    </ekkitab_institute_account_create>
   
	<ekkitab_institute_search_listall>
        <!-- Mage_ekkitab_institute -->
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="ekkitab_institute/institute" name="ekkitab_institute_listall" template="institute/list.phtml"/>
        </reference>
    </ekkitab_institute_search_listall>

	
	<ekkitab_institute_search_myinstitutes>
        <!-- Mage_ekkitab_institute -->
        <update handle="customer_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
			<remove name="customer_account_dashboard"/>
            <block type="ekkitab_institute/institute" name="ekkitab_institute_listall" template="institute/myinstitutes.phtml"/>
        </reference>
    </ekkitab_institute_search_myinstitutes>


	<ekkitab_institute_account_view>
        <!-- Mage_ekkitab_institute -->
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="ekkitab_institute/institute_view" name="ekkitab_institute_view" template="institute/view.phtml"/>
        </reference>
    </ekkitab_institute_account_view>
</layout>
