<h4> All Categories </h4>

<?php
	$categories = Mage::helper('catalog/category')->getStoreCategories();
?>
<?php $_count = is_array($categories)?count($categories):$categories->count(); ?>

<?php if($_count): ?>
<div class="box layered-nav">
	<dd class="no-padding no-border">
		<ol>
		<?php foreach ($categories as $category): ?>
			<?php if($category->getIsActive()):
				$url = $this->helper('ekkitab_catalog')->getEncodedString($category->getName());
				$url = $this->helper('ekkitab_catalog')->getSearchResultByIndexUrl(null,array('category' => $url));
			?>
			 <li>
				<a href="<?php echo $url ?>"<?php if ($this->isCategoryActive($category)): ?> class="active"<?php endif ?>><?php echo $this->htmlEscape($category->getName()) ?></a> </li>
			<?php endif; ?>
		<?php endforeach ?>
		</ol>
	</dd>
</div>
<?php endif; ?>
