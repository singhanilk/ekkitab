<div class="pageHeader"><?php echo $this->__('Review Details') ?></div>
<div class="clear"></br></div>
<?php if($this->getProductData()->getId()): 
	$product = $this->getProductData();
	$image = $product->getImage();  
	$title = $product->getName();  ?>
	<div class="my-review-detail">
		<div class="book-image"><a href="<?php echo $this->getUrl($this->getProductData()->getProductUrl()) ?>"><img src="<?php echo $this->helper('ekkitab_catalog')->resize($image,'image',false,null, 200); ?>" alt="<?php echo $title?>"></a></div>
		<!-- skuImage -->
		<div class="details">
			<div class="finDetBkTitle"><?php echo $this->htmlEscape($title) ?></div>
			<?php if( $this->getRating() && $this->getRating()->getSize()): ?>
			<strong><?php echo $this->__('Your Rating:') ?></strong>
				<table cellspacing="0" class="ratings-list">
				<?php foreach ($this->getRating() as $_rating): ?>
				<?php if($_rating->getPercent()): ?>
					<tr>
						<td class="label"><?php echo $_rating->getRatingCode() ?></td>
						<td><div class="rating-box">
							<div class="rating" style="width:<?php echo ceil($_rating->getPercent()) ?>%;"></div>
						</div></td>
					</tr>
				<?php endif; ?>
				<?php endforeach; ?>
				</table>
			<?php endif; ?>
			<div class="youSave"><?php echo $this->__('Your Review (submitted on : %s)', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?></div>
			<div class="description">
				<p><br/><?php echo nl2br($this->htmlEscape($this->getReviewData()->getDetail())) ?></p>
			</div>
        </div>
		<div class="clear"><br/></div>
    </div>
	<div class="button-set"><a href="<?php echo $this->getBackUrl() ?>" class="f-left">&laquo; <?php echo $this->__('Back to My Reviews') ?></a></div>
<?php endif; ?>
