	function getDisplayPagesArray($i,$pages){
		$displayPages=array();
		if ($pages <= 5) {
			$displayPages = range(1,$pages);
		}
		else {
			$half = ceil(5 / 2);
			if ($i >= $half && $i <= $pages - $half) {
				$start  = ($i - $half) + 1;
				$finish = ($start + 5) - 1;
			}
			elseif ($i < $half) {
				$start  = 1;
				$finish = 5;
			}
			elseif ($i > ( $pages- $half)) {
				$finish = $pages;
				$start  = $finish - 5 + 1;
			}

			$displayPages = range($start, $finish);
		}
        return $displayPages;
	}
