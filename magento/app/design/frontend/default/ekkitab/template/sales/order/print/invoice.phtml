<div class="printArea">
<?php $_order = $this->getOrder() ?>
<div class="pageHeader"><?php echo $this->__('Order #%s', $_order->getRealOrderId()) ?></div>
<div class="clear"></div>
<?php $_invoice = $this->getInvoice() ?>
<?php if($_invoice): ?>
    <?php $_invoices = array($_invoice); ?>
<?php else: ?>
    <?php $_invoices = $_order->getInvoiceCollection() ?>
<?php endif; ?>
<?php foreach ($_invoices as $_invoice): ?>
<div class="myOrderCopy">
	<div class="ordTop">
		<div class="ordHdr"><?php echo $this->__('Invoice #%s', $_invoice->getIncrementId()) ?></div>
		<div class="edit"><?php echo $this->__('Order Date: %s', $this->formatDate($_order->getCreatedAtStoreDate(), 'long')) ?></div>
		<div class="clear"></div>
    </div>
	<div class="content">
		<div class="col2-set">
			<div class="col-1">
			<?php if (!$_order->getIsVirtual()): ?>
				<h4><?php echo $this->__('Shipping Address') ?></h4>
				<?php $_shipping = $_invoice->getShippingAddress() ?>
				<address><?php echo $_shipping->format('html') ?></address>
			</div>
			<div class="col-2">
			<?php endif; ?>
				<h4><?php echo $this->__('Billing Address') ?></h4>
				<?php $_billing = $_invoice->getbillingAddress() ?>
				<address><?php echo $_order->getBillingAddress()->format('html') ?></address>
			</div>
			<?php if (!$_order->getIsVirtual()): ?>
		</div>
		<br />
		<div class="col2-set">
			<div class="col-1">
				<h4><?php echo $this->__('Shipping Method') ?></h4>
				 <?php echo $_order->getShippingDescription() ?>
			</div>
			<?php endif; ?>
			<div class="col-2">
				<h4><?php echo $this->__('Payment Method') ?></h4>
				<?php echo $this->getPaymentInfoHtml() ?>
			</div>
		</div>
		<br />
		<h4><?php echo $this->__('Items Invoiced') ?></h4>
		<table cellspacing="0" class="print-data-table print" id="my-invoice-table-<?php echo $_invoice->getId(); ?>">
			<col />
			<col width="10%" />
			<col width="1" />
			<col width="1" />
			<col width="1" />
			<thead>
				<tr>
					<th class="first"><?php echo $this->__('Book Name') ?></th>
					<th class="a-left"><?php echo $this->__('Price') ?></th>
					<th class="a-center"><span class="nobr"><?php echo $this->__('Qty Invoiced') ?></span></th>
					<th class="a-left last"><?php echo $this->__('Subtotal') ?></th>
				</tr>
			</thead>
			<?php $colspan = 3; ?>
			<tfoot>
				<?php if($_invoice->getSubtotal() != $_invoice->getGrandTotal()): ?>
				<tr>
					<td colspan="<?php echo $colspan; ?>" class="a-right"><?php echo $this->__('Order Subtotal') ?></td>
					<td class="last a-left"><?php echo $_order->formatPrice($_invoice->getSubtotal()) ?></td>
				</tr>
				<?php endif; ?>
				<?php if ($_invoice->getDiscountAmount() > 0): ?>
				<tr>
					<td colspan="<?php echo $colspan; ?>" class="a-right"><?php echo $this->__('Discount :') ?></td>
					<td class="last a-left"><?php echo $_order->formatPrice(0.00 - $_invoice->getDiscountAmount()) ?></td>
				</tr>
				<?php endif; ?>
				<?php if ($_invoice->getTaxAmount() > 0): ?>
				<tr>
					<td colspan="<?php echo $colspan; ?>" class="a-right"><?php echo $this->__('Tax') ?></td>
					<td class="last a-left"><?php echo $_order->formatPrice($_invoice->getTaxAmount()) ?></td>
				</tr>
				<?php endif; ?>
				<?php if ($_invoice->getShippingAmount()*1 || $_invoice->getShippingDescription()): ?>
				<tr>
					<td colspan="<?php echo $colspan; ?>" class="a-right"><?php echo $this->__('Shipping & Handling') ?></td>
					<td class="last a-left"><?php echo $_order->formatPrice($_invoice->getShippingAmount()) ?></td>
				</tr>
				<?php endif; ?>
				<tr>
					<td colspan="<?php echo $colspan; ?>" class="a-right"><?php echo $this->__('Grand Total') ?></td>
					<td class="last a-left"><?php echo $_order->formatPrice($_invoice->getGrandTotal()) ?></td>
				</tr>
			</tfoot>
		<?php $_items = $_invoice->getItemsCollection(); ?>
		<?php $_count = $_items->count(); ?>
		<?php foreach ($_items as $_item): ?>
			<?php if ($_item->getOrderItem()->getParentItem()) continue; ?>
			<tbody>
				<?php echo $this->getItemHtml($_item) ?>
			</tbody>
		<?php endforeach; ?>
		</table>
	</div>
</div>
<?php endforeach; ?>
<script type="text/javascript">window.print();</script>
</div>